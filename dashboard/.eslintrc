{
  "env": {
	"mocha": true,
	"node":  true,
	"es6":   true,
	"browser": true
  },
  "parserOptions": {
	"ecmaVersion": 6,
	"sourceType": "module",
	"ecmaFeatures": {
	  "jsx": true,
	  "modules": true,
	  "experimentalObjectRestSpread": true
	}
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
