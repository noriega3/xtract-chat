{
    "apps" : [
        {
            "name"              : "pubsub-server",
            "script"            : "./pubsub_server.js",
            "watch"             : true,
            "exec_mode"         : "fork",
            "instances"         : 1,
            "autorestart"       : true,
            "kill_timeout"      : 4000,
            "restart_delay"     : 3000,
            "listen_timeout"    : 4000,
            "max_restarts"      : 10,
            "vizion"            : false,
            "wait_ready"        : true,
            "node_args"         : ["--harmony", "--max_old_space_size=500", "--trace-warnings", "--trace-deprecation", "--inspect=9090"],
            "env": {
                "NODE_DEBUG": "*,-not_this,-ioredis:*,-redis_ps_bridge",
                "NODE_ENV": "development",
                "DEBUG": "*,-not_this,-ioredis:*,-redis_ps_bridge",
			  	"PM2_GRACEFUL_LISTEN_TIMEOUT": 4000
            },
            "env_staging": {
              "NODE_DEBUG": "bull,*,-not_this,-ioredis:*",
              "NODE_ENV": "staging",
              "DEBUG": "*,-not_this,-ioredis:*",
			  "PM2_GRACEFUL_LISTEN_TIMEOUT": 4000
			},
            "env_production": {
                "NODE_ENV": "production",
			  	"PM2_GRACEFUL_LISTEN_TIMEOUT": 4000

			}
        },
        {
            "name"              : "reservation-server",
            "script"            : "./reservation_server.js",
            "watch"             : true,
            "exec_mode"         : "cluster",
            "instances"         : 1,
            "autorestart"       : true,
            "kill_timeout"      : 4000,
            "restart_delay"     : 3000,
            "listen_timeout"    : 4000,
            "max_restarts"      : 10,
            "vizion"            : false,
		  	"wait_ready"        : true,
		  	"node_args"         : ["--harmony", "--max_old_space_size=500"],
            "env": {
                  "NODE_DEBUG": "bull",
                  "NODE_ENV": "development",
                  "DEBUG": "*,-not_this,-ioredis:redis,-express:*,-body-parser:*",
				  "PM2_GRACEFUL_LISTEN_TIMEOUT": 4000
			},
              "env_staging": {
                "NODE_DEBUG": "bull,*,-not_this,-ioredis:*,-express:*,-body-parser:*",
                "NODE_ENV": "staging",
                "DEBUG": "*,-not_this,-ioredis:*",
				"PM2_GRACEFUL_LISTEN_TIMEOUT": 4000

			  },
              "env_production": {
              	"NODE_ENV": "production",
				"PM2_GRACEFUL_LISTEN_TIMEOUT": 4000
			  }
        }
    ]
}
